{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "env": {
      // "SCONS_CACHE": "${workspaceFolder}/game/build/.cicd_cache"
    }
  },
  "tasks": [
    {
      "label": "Windows visual studio project",
      "type": "shell",
      "command": "scons vsproj=yes target=editor bits=64 dev_build=yes compiledb=yes test=yes debug_symbols=yes platform=windows bits=64 custom_modules=../modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Windows Debug",
      "type": "shell",
      "command": "scons target=editor bits=64 dev_build=yes llvm=yes mingw=yes compiledb=yes test=yes debug_symbols=yes platform=windows bits=64 use_thinlto=no warnings=no custom_modules=../modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Windows Debug Template",
      "type": "shell",
      "command": "scons target=template_debug bits=64 use_mingw=yes use_llvm=yes dev_build=yes compiledb=yes test=yes debug_symbols=yes platform=windows bits=64 use_thinlto=no warnings=no  custom_modules=../modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Windows Release",
      "type": "shell",
      "command": "scons optimize=speed werror=no platform=windows target=editor use_fastlto=no use_mingw=yes use_llvm=yes custom_modules=../modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Windows Release Template",
      "type": "shell",
      "command": "scons target=template_release bits=64 use_mingw=yes use_llvm=yes dev_build=no compiledb=yes  test=yes debug_symbols=yes platform=windows bits=64 use_thinlto=no warnings=no  custom_modules=../modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Javascript Release Template",
      "type": "shell",
      "command": "scons target=template_release bits=64 use_mingw=yes use_llvm=yes dev_build=no compiledb=yes  test=yes debug_symbols=yes platform=web bits=64 use_thinlto=no warnings=no debug_symbols=no custom_modules=../modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    }
  ]
}
