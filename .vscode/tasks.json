{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "env": {
      "RUSTFLAGS": "-C linker=clang",
      "CARGO_NET_GIT_FETCH_WITH_CLI": "true",
      // "SCONS_CACHE": "${workspaceFolder}/.cicd_cache",
    }
  },
  "tasks": [
    {
      "label": "Godot Linuxbsd",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "command": [
        "scons verbose=no warnings=extra debug_symbols=true werror=yes compiledb=yes precision=double dev_build=no use_static_cpp=false target=editor custom_modules=../modules/ use_llvm=yes"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Godot Web Editor",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "command": [
        "scons verbose=no warnings=extra p=web target=editor debug_symbols=true werror=yes compiledb=yes precision=double dev_build=no use_static_cpp=false target=editor custom_modules=../modules/ use_llvm=yes"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Godot Web Game",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "command": [
        "scons verbose=no warnings=extra p=web target=template_release debug_symbols=true werror=yes compiledb=yes precision=double dev_build=no use_static_cpp=false target=editor custom_modules=../modules/ use_llvm=yes"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    
  ]
}
