  "version": "2.0.0",
  "options": {
    "env": {
      // "SCONS_CACHE": "${workspaceFolder}/game/build/.cicd_cache"
    }
  },
  "tasks": [
    {
      "label": "Linux",
      "type": "shell",
      "command": "scons-3 werror=no dev_build=no target=editor use_mingw=yes use_llvm=yes custom_modules=../modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
