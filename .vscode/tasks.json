{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "env": {
      // "SCONS_CACHE": "${workspaceFolder}/game/build/.cicd_cache"
    }
  },
  "tasks": [
    {
      "label": "Windows Release",
      "type": "shell",
      "command": "scons werror=yes platform=windows dev_build=yes custom_modules=../modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Windows Release MSVC",
      "type": "shell",
      "command": "scons werror=no platform=windows vsproj=yes dev_build=yes custom_modules=../modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Macos Release",
      "type": "shell",
      "command": "scons werror=yes platform=macos dev_build=no module_mvsqlite_enabled=yes use_module_mvsqlite=on target=editor use_lto=no deprecated=no use_mingw=yes use_llvm=yes use_thinlto=no warnings=no custom_modules=../modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
