{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "env": {
      // "SCONS_CACHE": "${workspaceFolder}/game/build/.cicd_cache"
    }
  },
  "tasks": [
    {
      "label": "Remove bin",
      "type": "shell",
      "command": "rm -r bin",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Windows Release Dev",
      "type": "shell",
      "command": "scons werror=yes platform=windows dev_build=yes module_mvsqlite_enabled=yes target=editor use_lto=no deprecated=no use_mingw=yes use_llvm=yes use_thinlto=no warnings=no LINKFLAGS='-Wl,-pdb=' CCFLAGS='-Wall -Wno-tautological-compare -g -gcodeview' debug_symbols=no custom_modules=../modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Remove bin"],
    },
    {
      "label": "Windows Release",
      "type": "shell",
      "command": "scons werror=yes platform=windows dev_build=no module_mvsqlite_enabled=yes target=editor use_lto=no deprecated=no use_mingw=yes use_llvm=yes use_thinlto=no warnings=no LINKFLAGS='-Wl,-pdb=' CCFLAGS='-Wall -Wno-tautological-compare -g -gcodeview' debug_symbols=no custom_modules=../modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Remove bin"],
    },
    {
      "label": "Macos Release",
      "type": "shell",
      "command": "scons werror=yes platform=macos dev_build=no module_mvsqlite_enabled=yes use_module_mvsqlite=on target=editor use_lto=no deprecated=no use_mingw=yes use_llvm=yes use_thinlto=no warnings=no custom_modules=../modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "dependsOn": ["Remove bin"],
    }
  ]
}
